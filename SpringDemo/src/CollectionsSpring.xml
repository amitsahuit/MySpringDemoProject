<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
        
<beans>
	<bean id='triangle' class='com.amit.javaSpringsCollections.Triangle'>
		<property name="points">
			<list>
				<ref bean="FirstPoint"/>
				<ref bean="SecondPoint"/>
				<ref bean="ThirdPoint"/>
			</list>	
		</property>
	</bean> 
	
	<bean id="FirstPoint" class="com.amit.javaSpringsCollections.Point">
		<property name="x" value ="0"/>
		<property name="y" value ="0"/>
	</bean>
	
	<bean id="SecondPoint" class="com.amit.javaSpringsCollections.Point">
		<property name="x" value ="-20"/>
		<property name="y" value ="0"/>
	</bean>
	
	<bean id="ThirdPoint" class="com.amit.javaSpringsCollections.Point">
		<property name="x" value ="20"/>
		<property name="y" value ="0"/>
	</bean>
	
</beans>
